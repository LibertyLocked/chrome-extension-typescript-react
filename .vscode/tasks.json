{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "0.1.0",
  "command": "npm",
  "isShellCommand": true,
  "showOutput": "always",
  "suppressTaskName": true,
  "tasks": [
    {
      "taskName": "watch",
      "args": [
        "run",
        "watch"
      ]
    },
    {
      "taskName": "build-dev",
      "isBuildCommand": true,
      "args": [
        "run",
        "build-dev"
      ]
    },
    {
      "taskName": "build-prod",
      "args": [
        "run",
        "build-prod"
      ]
    },
    {
      "taskName": "clean",
      "args": [
        "run",
        "clean"
      ]
    }
  ]
}
